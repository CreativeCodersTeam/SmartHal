@using System.Xml
@using CreativeCoders.SmartHal.Web.CommandCenter.Client.Localization

<RadzenPanelMenu>

    <RadzenPanelMenuItem>
        <Template>
            <IconPanelMenuItem Icon="@Icons.Folder" Text="@Localizer[Texts.Things]" />
        </Template>
        <ChildContent>
            <RadzenPanelMenuItem Path="gateways">
                <Template>
                    <IconPanelMenuItem Icon="@Icons.Gateways" Text="@Localizer[Texts.Gateways]" />
                </Template>
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="things">
                <Template>
                    <IconPanelMenuItem Icon="@Icons.Things" Text="@Localizer[Texts.Things]" />
                </Template>
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="thingchannels">
                <Template>
                    <IconPanelMenuItem Icon="@Icons.ThingChannels" Text="@Localizer[Texts.ThingChannels]" />
                </Template>
            </RadzenPanelMenuItem>
        </ChildContent>
    </RadzenPanelMenuItem>
    
    <RadzenPanelMenuItem Path="items">
        <Template>
            <IconPanelMenuItem Icon="@Icons.Items" Text="@Localizer[Texts.Items]" />
        </Template>
    </RadzenPanelMenuItem>
    
    <RadzenPanelMenuItem Path="settings">
        <Template>
            <IconPanelMenuItem Icon="@Icons.Settings" Text="@Localizer[Texts.Settings]" />
        </Template>
    </RadzenPanelMenuItem>

</RadzenPanelMenu>

@code {
    [Inject]
    public IExtendedStringLocalizer<SideBar> Localizer { get; set; }
}
